{
  "name": "adesso_cms_theme",
  "version": "1.3.0",
  "type": "module",
  "description": "adesso CMS Theme - Modern Drupal theme with Vite, Tailwind CSS v4, and Drupal Storybook integration",
  "scripts": {
    "dev": "concurrently -k -n \"VITE,STORYBOOK\" -c \"#636cff,#ff4785\" \"npm run dev-vite\" \"npm run dev-storybook\"",
    "dev-vite": "vite --host 0.0.0.0 --port 5173",
    "dev-ddev": "DDEV_PROJECT_TYPE=drupal11 vite --host 0.0.0.0 --port 5173",
    "dev-storybook": "storybook dev -p 6006 --host 0.0.0.0 --no-open",
    "build": "concurrently -n \"VITE,STORYBOOK\" -c \"#636cff,#ff4785\" \"npm run build-vite\" \"npm run build-storybook\"",
    "build-vite": "vite build",
    "build-storybook": "storybook build -o dist/storybook",
    "watch": "vite --watch",
    "format": "prettier --write \"**/*.{css,js,json}\"",
    "lint": "npm run lint-prettier && npm run lint-css && npm run lint-js",
    "lint-prettier": "prettier --check \"**/*.{css,js,json}\"",
    "lint-css": "stylelint \"**/*.css\"",
    "lint-js": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "qa:full": "npm run lint && npm run test && npm run test:e2e",
    "storybook": "npm run dev-storybook",
    "visual:reference": "backstop reference",
    "visual:test": "backstop test",
    "visual:approve": "backstop approve",
    "visual:report": "backstop openReport"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-essentials": "8.6.7",
    "@storybook/addon-links": "8.6.7",
    "@storybook/html-vite": "8.6.7",
    "@storybook/manager-api": "8.6.7",
    "@storybook/theming": "8.6.7",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.0.9",
    "@testing-library/jest-dom": "^6.6.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@whitespace/storybook-addon-html": "^7.0.0",
    "autoprefixer": "^10.4.20",
    "backstopjs": "^6.3.25",
    "browserslist-to-esbuild": "^2.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-storybook": "^0.10.2",
    "glob": "^10.4.0",
    "globals": "^15.15.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "rimraf": "^5.0.10",
    "storybook": "8.6.7",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-scss": "^6.12.1",
    "tailwindcss": "^4.0.0",
    "vite": "^6.2.0",
    "vite-plugin-twig-drupal": "^1.6.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindplus/elements": "^1.0.8",
    "flowbite": "^3.1.2",
    "swiper": "^11.2.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
