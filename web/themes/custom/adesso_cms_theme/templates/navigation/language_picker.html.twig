{#
/**
 * @file
 * Language picker component template
 */
#}

{% set languages = [] %}
{% set current_language = {} %}

{% if languages|length > 1 %}
  <div class="language-picker">
    <label for="language-select" class="block text-sm font-medium text-gray-700 mb-2">
      {{ 'Language'|t }}
    </label>
    <select id="language-select" class="block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary">
      {% for language in languages %}
        <option value="{{ language.getId() }}" {{ language.getId() == current_language.getId() ? 'selected' : '' }}>
          {{ language.getName() }}
        </option>
      {% endfor %}
    </select>
  </div>
{% endif %}