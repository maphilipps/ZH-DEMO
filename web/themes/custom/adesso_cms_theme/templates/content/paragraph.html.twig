{#
/**
 * @file
 * Base paragraph template using paragraph-wrapper component.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 * - content: All paragraph items.
 * - attributes: HTML attributes for the containing element.
 * - view_mode: View mode; for example, "preview" or "full".
 *
 * This template uses the paragraph-wrapper SDC component with the embed pattern
 * for flexible content insertion using slots.
 *
 * Override specific paragraph types using paragraph--[bundle].html.twig:
 * 
 * {% embed 'adesso_cms_theme:paragraph-wrapper' with {...} %}
 *   {% block prefix %}{% endblock %}
 *   {% block content %}...custom content...{% endblock %}
 * {% endembed %}
 */
#}

{# Default wrapper configuration - uses light theme by default #}
{% set default_theme = 'light' %}
{% set default_tag = 'div' %}
{% include '@adesso_cms_theme/_mixins/paragraph-config.twig' %}

{# Embed the paragraph-wrapper component using slots #}
{% embed 'adesso_cms_theme:paragraph-wrapper' with {
  theme: wrapper_theme,
  spacing: wrapper_spacing,
  tag: wrapper_tag,
  className: wrapper_css_class,
  attributes: attributes
} %}
  {% block prefix %}{% endblock %}
  {% block content %}{{ content }}{% endblock %}
{% endembed %}