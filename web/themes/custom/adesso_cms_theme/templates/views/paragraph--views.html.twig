{#
/**
 * @file
 * Views paragraph template using paragraph-wrapper component with embed pattern.
 */
#}

{# Views paragraph configuration #}
{% include '@adesso_cms_theme/_mixins/paragraph-config.twig' %}

{# Embed the paragraph-wrapper component using slots #}
{% embed 'adesso_cms_theme:paragraph-wrapper' with {
  theme: wrapper_theme,
  spacing: wrapper_spacing,
  tag: wrapper_tag,
  className: wrapper_css_class,
  attributes: attributes
} %}
  {% block prefix %}
    {{ title_prefix }}
    {{ title_suffix }}

  {% endblock %}
  {% block content %}
    <div class="py-8 px-4 mx-auto container lg:py-16">
      {% if content.field_pre_headline or content.field_title %}
        {% include 'adesso_cms_theme:section-header' with {
          title: content.field_title|striptags,
          pre_headline: content.field_pre_headline|striptags,
          alignment: 'center',
          title_tag: 'h2',
          pre_headline_tag: 'span',
          title_visual_level: '2',
          pre_headline_visual_level: '3',
          additional_classes: 'mb-8'
        } %}
      {% endif %}
      
      {{ content|without('field_title', 'field_link', 'field_pre_headline', 'field_theme', 'frontend_editing') }}
      
      {% if content.field_link[0]['#url'] %}
        <div class="text-center mt-6">
          {% include 'adesso_cms_theme:button' with {
            "button": {
              "url": content.field_link[0]['#url'],
              "text": content.field_link[0]['#title'],
            }
          } only %}
        </div>
      {% endif %}
    </div>
  {% endblock %}
{% endembed %}
