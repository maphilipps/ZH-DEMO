{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  {% set items %}
    {% for item in breadcrumb %}
      {% if loop.first %}
        {{ include('@components/breadcrumb-item.html.twig', {
          url: '/',
          text: 'Startseite'
        }) }}
      {% elseif loop.index == 2 %}
        {{ include('@components/breadcrumb-item.html.twig', {
          text: item.text,
          devider: true
        }) }}
      {% else %}
        {{ include('@components/breadcrumb-item.html.twig', {
          url: item.url,
          text: item.text,
          devider: true
        }) }}
      {% endif %}
    {% endfor %}
  {% endset %}

  {{ include('@components/breadcrumb.html.twig', {
    'breadcrumb': items,
  }) }}
{% endif %}
