{#
/**
 * @file
 * Theme override for input elements.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{% set type = attributes.type|default('text') %}

{% if type == 'submit' %}
  {# Submit buttons are handled by input--submit.html.twig #}
  <input{{ attributes }} />{{ children }}
{% else %}
  {# Style all other input types with Tailwind classes #}
  <input{{ attributes.addClass([
    'w-full',
    'px-3',
    'py-2',
    'border',
    'border-gray-300',
    'rounded-lg',
    'focus:outline-none',
    'focus:ring-2',
    'focus:ring-primary',
    'focus:border-transparent',
    'placeholder-gray-400',
    'text-gray-900',
    'text-sm',
    'transition',
    'duration-200'
  ]) }} />{{ children }}
{% endif %}