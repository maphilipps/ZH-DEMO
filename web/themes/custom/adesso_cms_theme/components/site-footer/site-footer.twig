{#
/**
 * @param {Array} links - Array of link objects with title and url properties
 * @param {string} site_logo - URL of the site logo
 * @param {string} site_name - Name of the site
 * @param {number} current_year - Current year, defaults to current year
 */
#}

<div class="mx-auto max-w-screen-xl">
  <div class="flex justify-between">
    <a href="#" class="flex items-center mb-4 text-2xl font-semibold text-gray-900 lg:mb-0 dark:text-white">
      <img src="{{ site_logo }}" alt="{{ site_name }} Logo" title="{{ site_name }} Logo" class="h-8"/>
    </a>
    {% block content %}
    <ul class="flex flex-right items-center mb-4 text-sm text-gray-500 lg:mb-0 dark:text-gray-400">
      {% for link in links|default([]) %}
        {% if link.url %}
          <li>
            <a href="{{ link.url }}" class="text-sm text-gray-500 mr-4 hover:underline md:mr-6">
              {{ link.title }}
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
    {% endblock %}

  </div>
  <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8">
  <div class="sm:items-center sm:justify-between sm:flex">
    <span class="block text-sm text-gray-500 dark:text-gray-400">Â© {{ current_year|default("now"|date("Y")) }} <a href="https://www.adesso.de" class="hover:underline">{{ site_name }}</a>. All Rights Reserved.</span>
    <div class="flex justify-center mt-4 space-x-6 sm:mt-0">
      {{ drupal_entity('block_content', '1') }}
    </div>
  </div>
</div>


