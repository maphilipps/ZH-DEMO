{#
/**
 * @file
 * Default theme implementation to display a block reference paragraph.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{% set is_dark = paragraph.field_content_element_theme.value %}

<div class="w-full {{ is_dark ? 'bg-gray-100' : 'bg-white' }}">
<div{{ attributes }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% block content %}
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
    {{ content.frontend_editing }}
    {%
      include 'adesso_cms_theme:block-reference' with {
        pre_headline: content.field_pre_headline|render,
        title: content.field_title|render,
        block_content: content.field_block_reference|render,
        is_dark: is_dark
      } only
    %}
  </div>
  {% endblock %}
</div>
</div>