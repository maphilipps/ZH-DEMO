  "paths": {
    "bitmaps_reference": "./backstop_data/migration_reference",
    "bitmaps_test": "./backstop_data/migration_test",
    "engine_scripts": "./backstop_data/engine_scripts",
    "html_report": "./backstop_data/migration_html_report",
    "json_report": "./backstop_data/migration_json_report"
  },
  "report": ["browser", "json"],
  "engine": "playwright",
  "engineOptions": {
    "ignoreHTTPSErrors": true,
    "args": ["--no-sandbox", "--disable-setuid-sandbox", "--disable-web-security", "--disable-features=VizDisplayCompositor"],
    "headless": true,
    "gotoParameters": { 
      "waitUntil": "networkidle",
      "timeout": 30000
    }
  },
  "asyncCaptureLimit": 3,
  "asyncCompareLimit": 10,
  "debug": false,
  "debugWindow": false,
  "resembleOutputOptions": {
    "errorColor": {
      "red": 255,
      "green": 0,
      "blue": 0
    },
    "errorType": "movement",
    "transparency": 0.3,
    "largeImageThreshold": 1200,
    "useCrossOrigin": false
  }
}