
{% set anchor %}
  {{ include('@components/anchor.html.twig', {
    text: anchor,
  }) }}
{% endset %}

{% set headline %}
  {{ include('@adesso_cms_theme/heading/heading.twig', {
        heading: {
          title: headline,
          as: 'h2',
          visual_level: '2'
        }
      }) }}
{% endset %}

{% set text_content %}
  {{ text }}
  <hr>
{% endset %}

{% set text %}
  {{ include('@components/text.html.twig', {
    text: text_content,
    attributes: create_attribute().addClass('text-black'),
  }) }}
{% endset %}

{{ include('@module/text.html.twig', {
  headline: headline,
  anchor: anchor,
  text: text,
}) }}
