        echo "ğŸŒ Access Results:"
        echo "  â€¢ UI: https://zh-demo.ddev.site:5678"
        echo "  â€¢ Reports: ./reports/unlighthouse/"
        echo ""
        exit 0
        ;;
    *)
        print_info "ğŸ” Full Scan Mode - Comprehensive analysis"
        ;;
esac

# Configuration validation
CONFIG_PATH="./tests/unlighthouse/$CONFIG_FILE"
if [ ! -f "$CONFIG_PATH" ]; then
    print_error "âŒ Configuration file not found: $CONFIG_PATH"
    print_warning "Available configurations:"
    ls -1 ./tests/unlighthouse/*.ts 2>/dev/null | sed 's|./tests/unlighthouse/||' || echo "  No configurations found!"
    exit 1
fi

print_info "ğŸ“‹ Scan Configuration:"
print_info "   â€¢ Mode: $DESCRIPTION"
print_info "   â€¢ Config: $CONFIG_FILE"
print_info "   â€¢ Site: https://zh-demo.ddev.site"

# Swiss Compliance Information
print_info "ğŸ‡¨ğŸ‡­ Swiss Compliance Settings:"
print_info "   â€¢ WCAG 2.1 AA: Required (95% threshold)"
print_info "   â€¢ eCH-0059: Government standards"
