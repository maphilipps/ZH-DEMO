 */
#}

{{ title_prefix }}
{{ title_suffix }}

{% embed "adesso_cms_theme:slider-item" with {
  theme: paragraph.field_theme.value|default('default')
} only %}
  {% block title %}{{ content.field_title }}{% endblock %}
  {% block summary %}{{ content.field_summary }}{% endblock %}
  {% block media %}{{ content.field_media }}{% endblock %}
{% endembed %}
