<div class="py-8 mx-auto max-w-screen-xl lg:py-16 flex flex-col lg:flex-row items-center justify-between gap-6 {{ modifier|default('container') }}{{ layout|default('left') == 'right' ? ' lg:flex-row-reverse' : '' }}"
     style="{{ layout|default('left') == 'right' ? 'flex-direction: row-reverse;' : '' }}">
  <div class="w-full lg:w-1/2">
      {{ media|default('') }}
  </div>
  <div class="w-full lg:w-1/2 xl:w-5/12 flex flex-col gap-4">
    {% if pre_headline|default('') %}
      {% include 'adesso_cms_theme:heading' with {
        heading: {
          title: pre_headline,
          as: 'span',
          visual_level: '3',
          custom_classes: 'block mb-2 font-bold text-2xl tracking-tight leading-none'
        }
      } %}
    {% endif %}

    {% include 'adesso_cms_theme:heading' with {
      heading: {
        title: title,
        as: 'h2',
        custom_classes: 'text-3xl font-bold'
      }
    } %}

    {% if text|default('') %}
      <div class="mb-2 lg:mb-4">
        {{ text|raw }}
      </div>
    {% endif %}

    {% if features|default([]) and features|length > 0 %}
      {% set isStatType = features[0].type == 'stats_item' %}
      <div class="{{ isStatType ? 'flex flex-col sm:flex-row gap-4 mb-6' : 'mb-6 space-y-4' }}">
        {% for feature in features %}
          {% if feature.type == 'stats_item' %}
            {% include 'adesso_cms_theme:stat-card' with {
              heading: feature.heading|default(''),
              body: feature.body|default(''),
              icon: feature.icon|default(''),
              media: feature.media|default(''),
              layout: 'left',
              border: false,
            } only %}
          {% else %}
            <div class="flex items-start gap-4">
              <i data-lucide="{{ feature.icon|default('') }}" width="24" height="24" class="mt-[-2px]"></i>
              <span class="flex-1">{{ feature.summary|default('')|raw }}</span>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    {% if link.url|default('') %}
      <div class="flex">
        {% include 'adesso_cms_theme:button' with {
          url: link.url,
          text: link.title|default('Read more'),
          modifier: 'btn-default'
        } only %}
      </div>
    {% endif %}
  </div>
</div>
