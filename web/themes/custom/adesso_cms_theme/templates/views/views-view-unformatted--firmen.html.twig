{#
/**
 * @file
 * Theme override for unformatted rows in Firmen view.
 * Based on events view template.
 */
#}
{% if title %}
  <h3>{{ title }}</h3>
{% endif %}

{# Compact list layout for directory content #}
<div class="space-y-6">
  {% for row in rows %}
    {% set row_classes = [
      'bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow',
      default_row_class ? 'views-row',
    ] %}
    <article{{ row.attributes.addClass(row_classes) }}>
      {{ row.content }}
    </article>
  {% endfor %}
</div>