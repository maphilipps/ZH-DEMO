{
  "task_flow": {
    "description": "Three-lane compounding engineering task flow system",
    "statuses": {
      "ready-for-dev": {
        "description": "Tasks planned and ready for implementation",
        "owner": "planning-lane",
        "next_status": "work",
        "actions": ["claim", "refine", "clarify"]
      },
      "work": {
        "description": "Tasks currently being implemented",
        "owner": "building-lane", 
        "next_status": "ready-for-review",
        "actions": ["implement", "test", "document"]
      },
      "ready-for-review": {
        "description": "Tasks completed and ready for quality review",
        "owner": "reviewing-lane",
        "next_status": ["approved", "needs-changes"],
        "actions": ["review", "validate", "approve", "reject"]
      },
      "approved": {
        "description": "Tasks approved and ready for deployment",
        "owner": "system",
        "next_status": "deployed",
        "actions": ["deploy", "monitor"]
      },
      "needs-changes": {
        "description": "Tasks requiring changes before approval",
        "owner": "building-lane",
        "next_status": "work",
        "actions": ["fix", "improve", "address-feedback"]
      }
    },
    "lanes": {
      "planning": {
        "agent_lead": "@drupal-solution-architect",
        "agent_support": "@drupal-technical-pm",
        "responsibilities": [
          "Requirements analysis",
          "Architecture design", 
          "Task specification",
          "Swiss compliance research"
        ],
        "output_status": "ready-for-dev"
      },
      "building": {
        "agent_lead": "@drupal-11-lead-developer",
        "agent_support": "@municipality-portal-specialist",
        "responsibilities": [
          "Feature implementation",
          "Testing and validation",
          "Performance optimization",
          "Code documentation"
        ],
        "input_status": "ready-for-dev",
        "working_status": "work",
        "output_status": "ready-for-review"
      },
      "reviewing": {
        "agent_lead": "@swiss-compliance-specialist", 
        "agent_support": "@qa-testing-specialist",
        "responsibilities": [
          "Quality assurance",
          "Swiss compliance validation",
          "Accessibility testing",
          "Performance validation"
        ],
        "input_status": "ready-for-review",
        "output_status": ["approved", "needs-changes"]
      }
    }
  },
  "coordination": {
    "task_handoffs": {
      "planning_to_building": {
        "trigger": "task status changed to ready-for-dev",
        "action": "notify building lane agent",
        "message": "New task available for implementation"
      },
      "building_to_reviewing": {
        "trigger": "task status changed to ready-for-review", 
        "action": "notify reviewing lane agent",
        "message": "New task ready for quality review"
      },
      "reviewing_to_building": {
        "trigger": "task status changed to needs-changes",
        "action": "notify building lane agent", 
        "message": "Task requires changes based on review feedback"
      }
    }
  }
}