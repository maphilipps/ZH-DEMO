<div class="py-4 px-4 mx-auto max-w-screen-xl lg:py-16 border bg-card text-card-foreground border-none shadow-none {{ modifier ?? 'my-6 lg:my-25' }}">

  {% if pre_headline %}
    <h3 class="mb-4  font-bold tracking-tight leading-none text-gray-900 text-center">
      {{ pre_headline }}
    </h3>
  {% endif %}
  {% if title %}
    <div class="flex flex-col p-6 text-3xl text-center">
      <h3 class="font-semibold leading-none tracking-tight">{{ title }}</h3>
    </div>
  {% endif %}
  {% if sub_headline %}
    <h3 class="mb-4 font-bold tracking-tight leading-none text-gray-900 text-center">
      {{ sub_headline }}
    </h3>
  {% endif %}

  <div class="p-6 pt-0">
    <div class="prose max-w-none [&_iframe]:w-full [&_iframe]:max-w-full">
      {{ embed }}
    </div>
  </div>
</div>
