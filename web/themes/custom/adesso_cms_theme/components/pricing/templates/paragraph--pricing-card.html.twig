{%
  set link = content.field_link[0] ? {
    url: content.field_link[0]['#url']|render,
    title: content.field_link[0]['#title']|render,
  } : {}
%}

{% embed '@adesso_cms_theme/pricing/pricing-card.twig' with {
  "title": content.field_title|render,
  "pre_headline": content.field_eyebrow|render,
  "features": content.field_features_text|render|striptags|trim|split('\n'),
  "cta_link": link,
} only %}{% endembed %}
