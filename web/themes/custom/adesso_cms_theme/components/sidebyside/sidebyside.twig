<div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 flex flex-col lg:flex-row items-center justify-between gap-6 {{ modifier ?? 'container' }}
{{ layout == 'right' ? 'lg:flex-row-reverse' : '' }} {{ is_dark ? 'bg-gray-800 text-white' : 'bg-white text-gray-900' }}">
	<div class="w-full lg:w-1/2">
		{{ media }}
	</div>
	<div class="w-full lg:w-1/2 xl:w-5/12 flex flex-col gap-4">
    {% if pre_headline %}
      <h3 class="mb-2 font-bold text-2xl tracking-tight leading-none">
        {{ pre_headline }}
      </h3>
    {% endif %}

		<h2 class="text-3xl font-bold">{{ title }}</h2>

		{% if text %}
			<div class="mb-2 lg:mb-4">
				{{ text }}
			</div>
		{% endif %}

		{% if features and features|length > 0 %}
			{% set isStatType = features[0].type == 'stats_item' %}
			<div class="{{ isStatType ? 'flex flex-col sm:flex-row gap-4 mb-6' : 'mb-6 space-y-4' }}">
				{% for feature in features %}
					{% if feature.type == 'stats_item' %}
						{% include '@adesso_cms_theme/stat-card/stat-card.twig' with {
              heading: feature.heading,
              body: feature.body,
              icon: feature.icon,
              media: feature.media,
							layout: 'left',
							border: false,
            } only %}
					{% else %}
						<div class="flex items-start gap-4">
							<i data-lucide="{{ feature.icon }}" width="24" height="24" class="mt-[-2px]"></i>
							<span class="flex-1">{{ feature.summary|raw }}</span>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		{% endif %}

		{% if link.url %}
			<div class="flex">
				{% include '@adesso_cms_theme/button/button.twig' with {
					url: link.url,
					text: link.title ?? 'Read more',
					modifier: 'btn-default'
        } only %}
			</div>
		{% endif %}
	</div>
</div>
