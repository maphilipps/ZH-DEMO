<div class="fluid-grid px-safe items-center gap-6 md:grid-cols-12 isolate my-12">
    <div class="
         md:col-span-10 lg:col-span-6 min-w-0 py-2
         {{ image_right ? 'md:order-2' : 'md:order-3' }}
      ">
        {% block image %}{% endblock %}
    </div>

    <div class="
        relative md:col-span-7 lg:col-span-6 py-12
        {{ image_right ? 'md:order-3' : 'md:order-1' }}
      ">
        <div>
            <div class="max-w-[70ch] flex flex-col space-y-6">
                {% block title %}{% endblock %}
                <span class="text-2xl/10 text-pretty font-[100]  text-neutral">{% block subtitle %}{% endblock %}</span>
                <div class="sm:max-w-2xl prose">
                    {% block text %}{% endblock %}
                </div>
                <div>
                    {% block actions %}{% endblock %}
                </div>
            </div>
        </div>
    </div>

</div>
