<section>
  <div class="py-8 lg:py-16 mx-auto max-w-screen-xl px-4">
    {% if pre_headline %}
      <h3 class="mb-4 font-bold text-2xl tracking-tight text-center leading-none">
        {{ pre_headline }}
      </h3>
    {% endif %}
    <h2 class="mb-8 lg:mb-16 text-3xl font-bold text-center">
      {{ title }}
    </h2>
    <div class="grid grid-cols-2 gap-8 sm:gap-12 md:grid-cols-3 lg:grid-cols-6">
      {% block logo_items %}
        {% for logo in logos %}
          {% if logo.media is not empty %}
            {{ logo.media }}
          {% endif %}
        {% endfor %}
      {% endblock %}
    </div>
  </div>
</section>
