{#
/**
 * @file
 * Municipality Navigation Component
 *
 * @param {string} municipality - Municipality identifier (thalwil, thalheim, erlenbach)
 * @param {array} items - Navigation menu items
 * @param {array} languageLinks - Available language options
 * @param {boolean} searchEnabled - Enable AI-enhanced search
 * @param {string} mobileBreakpoint - Responsive breakpoint
 * @param {object} attributes - HTML attributes
 */
#}
{% set municipality = municipality|default('thalwil') %}
{% set searchEnabled = searchEnabled|default(true) %}
{% set mobileBreakpoint = mobileBreakpoint|default('lg') %}

{# Municipality-specific theme classes #}
{% set theme_classes = {
  'thalwil': 'bg-blue-600 hover:bg-blue-700',
  'thalheim': 'bg-green-600 hover:bg-green-700',
  'erlenbach': 'bg-indigo-600 hover:bg-indigo-700'
} %}

{% set current_theme = theme_classes[municipality]|default(theme_classes['thalwil']) %}

<nav {{ attributes|default(create_attribute()).addClass([
  'municipality-navigation',
  'relative',
  'z-50',
  'municipality-' ~ municipality
]) }} x-data="municipalityNavigation()">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      
      {# Logo Section #}
      <div class="flex items-center">
        <div class="flex-shrink-0">
          {% block logo %}
            <a href="/" class="flex items-center">
              <img class="h-8 w-auto" src="/themes/custom/adesso_cms_theme/assets/logos/{{ municipality }}-logo.svg" alt="{{ municipality|capitalize }} Logo">
              <span class="ml-3 text-xl font-semibold text-gray-900">Gemeinde {{ municipality|capitalize }}</span>
            </a>
          {% endblock %}
        </div>
      </div>

      {# Desktop Navigation #}
      <div class="hidden {{ mobileBreakpoint }}:block">
        <div class="ml-10 flex items-baseline space-x-4">
          {% for item in items %}
            {% set has_children = item.children is not empty %}
            <div class="relative" x-data="{ open: false }" @mouseenter="open = true" @mouseleave="open = false">
              <a href="{{ item.url }}" 
                 class="{% if item.active %}{{ current_theme }} text-white{% else %}text-gray-700 hover:text-gray-900{% endif %} px-3 py-2 rounded-md text-sm font-medium flex items-center"
                 {% if has_children %}@click.prevent="open = !open"{% endif %}>
                {{ item.title }}
                {% if has_children %}
                  <svg class="ml-1 h-4 w-4 transition-transform" :class="{'rotate-180': open}" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                {% endif %}
              </a>
              
              {% if has_children %}
                <div x-show="open" 
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0 translate-y-1"
                     x-transition:enter-end="opacity-100 translate-y-0"
                     x-transition:leave="transition ease-in duration-150"
                     x-transition:leave-start="opacity-100 translate-y-0"
                     x-transition:leave-end="opacity-0 translate-y-1"
                     class="absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50"
                     @click.away="open = false">
                  <div class="py-1">
                    {% for child in item.children %}
                      <a href="{{ child.url }}" 
                         class="{% if child.active %}bg-gray-100{% endif %} block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        {{ child.title }}
                      </a>
                    {% endfor %}
                  </div>
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>

      {# Right Section: Search, Language, Mobile Toggle #}
      <div class="flex items-center gap-4">
        
        {# AI-Enhanced Search #}
        {% if searchEnabled %}
          <div class="hidden {{ mobileBreakpoint }}:block">
            {% block search %}
              <button @click="$dispatch('open-search')" 
                      class="p-2 text-gray-600 hover:text-gray-900 transition-colors"
                      aria-label="Suche öffnen">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </button>
            {% endblock %}
          </div>
        {% endif %}

        {# Language Switcher #}
        {% if languageLinks is not empty %}
          <div class="hidden {{ mobileBreakpoint }}:block relative" x-data="{ langOpen: false }">
            <button @click="langOpen = !langOpen" 
                    class="flex items-center text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium">
              {% for lang in languageLinks %}
                {% if lang.active %}
                  <span class="uppercase">{{ lang.code }}</span>
                {% endif %}
              {% endfor %}
              <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
            <div x-show="langOpen" 
                 x-transition
                 @click.away="langOpen = false"
                 class="absolute right-0 mt-2 w-32 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50">
              <div class="py-1">
                {% for lang in languageLinks %}
                  <a href="{{ lang.url }}" 
                     class="{% if lang.active %}bg-gray-100 font-semibold{% endif %} block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                    {{ lang.label }}
                  </a>
                {% endfor %}
              </div>
            </div>
          </div>
        {% endif %}

        {# Mobile Menu Toggle #}
        <button @click="mobileMenuOpen = !mobileMenuOpen" 
                class="{{ mobileBreakpoint }}:hidden p-2 rounded-md text-gray-700 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-{{ municipality }}-500"
                aria-expanded="false"
                aria-label="Hauptmenü öffnen">
          <svg x-show="!mobileMenuOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg x-show="mobileMenuOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: none;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  {# Mobile Navigation Menu #}
  <div x-show="mobileMenuOpen" 
       x-transition:enter="transition ease-out duration-200"
       x-transition:enter-start="opacity-0 scale-95"
       x-transition:enter-end="opacity-100 scale-100"
       x-transition:leave="transition ease-in duration-150"
       x-transition:leave-start="opacity-100 scale-100"
       x-transition:leave-end="opacity-0 scale-95"
       class="{{ mobileBreakpoint }}:hidden"
       style="display: none;">
    <div class="bg-white shadow-lg">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {% for item in items %}
          {% set has_children = item.children is not empty %}
          <div x-data="{ subOpen: false }">
            <button @click="{% if has_children %}subOpen = !subOpen{% else %}window.location.href='{{ item.url }}'{% endif %}"
                    class="{% if item.active %}{{ current_theme }} text-white{% else %}text-gray-700 hover:bg-gray-100{% endif %} group flex items-center justify-between w-full px-3 py-2 rounded-md text-base font-medium">
              <span>{{ item.title }}</span>
              {% if has_children %}
                <svg class="h-5 w-5 transition-transform" :class="{'rotate-180': subOpen}" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              {% endif %}
            </button>
            
            {% if has_children %}
              <div x-show="subOpen" x-transition class="pl-6 space-y-1">
                {% for child in item.children %}
                  <a href="{{ child.url }}" 
                     class="{% if child.active %}bg-gray-100{% endif %} block px-3 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-md">
                    {{ child.title }}
                  </a>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      
      {# Mobile Language Switcher #}
      {% if languageLinks is not empty %}
        <div class="border-t border-gray-200 px-2 py-3">
          <div class="flex justify-center space-x-4">
            {% for lang in languageLinks %}
              <a href="{{ lang.url }}" 
                 class="{% if lang.active %}{{ current_theme }} text-white{% else %}text-gray-600 hover:text-gray-900{% endif %} px-3 py-1 rounded-md text-sm font-medium uppercase">
                {{ lang.code }}
              </a>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      {# Mobile Search #}
      {% if searchEnabled %}
        <div class="border-t border-gray-200 px-2 py-3">
          <button @click="$dispatch('open-search'); mobileMenuOpen = false" 
                  class="w-full flex items-center justify-center px-3 py-2 text-gray-600 hover:bg-gray-100 rounded-md">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <span>Suche</span>
          </button>
        </div>
      {% endif %}

      {% block mobile_menu_extra %}{% endblock %}
    </div>
  </div>
</nav>