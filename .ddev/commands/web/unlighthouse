print_info "ğŸš€ Starting Unlighthouse scanner..."

# Run with proper error handling
if unlighthouse --config-file="$CONFIG_PATH" --host=0.0.0.0 --port=5678; then
    print_success "âœ… Scan completed successfully!"
    print_success "ğŸ“Š Reports: ./reports/unlighthouse/"
    print_success "ğŸŒ UI: https://zh-demo.ddev.site:5678"
    
    if [ "$MODE" = "demo" ]; then
        print_success "ğŸ¯ Demo validation complete - ready for presentation!"
    fi
