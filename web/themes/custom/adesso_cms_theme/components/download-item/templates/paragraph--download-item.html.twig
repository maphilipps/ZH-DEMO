{#
/**
 * @file
 * Download item paragraph template (child component - no wrapper needed).
 */
#}

{# Download item paragraph configuration using centralized mixin #}
{% include '@adesso_cms_theme/_mixins/paragraph-config.twig' %}

{% set file_entity = paragraph.field_file.entity %}
{% set file_url = file_entity ? file_url(file_entity.uri.value) : '' %}
{% set file_size = file_entity ? (file_entity.filesize.value + 0) : 0 %}
{% set file_extension = file_entity ? file_entity.uri.value|split('.')|last|lower : '' %}
{% set file_filename = file_entity ? file_entity.filename.value : '' %}

{% set is_dark = wrapper_theme == 'dark' %}

{{ title_prefix }}
{{ title_suffix }}

{% include 'adesso_cms_theme:download-item' with {
  file_url: file_url,
  file_name: file_filename,
  file_size: file_size,
  file_extension: file_extension,
  has_description: content.field_file_description ? true : false,
  is_dark: is_dark,
  file_description_content: content.field_file_description,
  file_name_content: content.field_file_name
} %}
