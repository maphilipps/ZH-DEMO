{
  "name": "drupalx_theme",
  "scripts": {
    "scss-fix": "npx stylelint './src/**/*.css' './components/**/*.scss' --fix",
    "storybook": "NODE_ENV=production storybook dev -p 6006 --quiet 2>&1 | grep -v 'Cannot read properties of undefined'",
    "storybook:verbose": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean:css": "rimraf dist/*.css components/**/*.css",
    "clean:js": "rimraf dist/*.js",
    "clean": "npm run clean:css && npm run clean:js",
    "lint:js": "eslint components/**/*.behavior.js --fix",
    "lint:sass": "stylelint 'src/**/*.css' 'components/**/*.scss'",
    "compile": "node compile.js",
    "build:stories": "node build-stories.js",
    "build": "npm run build:stories && npx tailwindcss -i ./src/css/globals.css -o ./dist/css/globals.css --minify && npm run compile",
    "watch:tailwind": "npx tailwindcss -i ./src/css/globals.css -o ./dist/css/globals.css --watch",
    "watch:components": "chokidar 'components/**/*.scss' -c 'node compile.js {path}'",
    "watch:stories": "chokidar 'components/**/*.stories.js' -c 'node story-watcher.js {path}'",
    "watch": "npm-run-all --parallel watch:tailwind watch:components watch:stories",
    "postinstall": "husky install",
    "prepare": "husky install",
    "cypress": "npx cypress run",
    "percy-storybook": "percy storybook -i '^Editorial/' ./storybook-static"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.4.0",
    "@percy/cli": "^1.28.7",
    "@percy/storybook": "^6.0.0",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-mdx-gfm": "^8.6.14",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.3",
    "@storybook/blocks": "^8.6.14",
    "@storybook/html": "^8.6.14",
    "@storybook/html-webpack5": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "cypress": "^13.11.0",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.6.15",
    "glob": "^10.3.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "rimraf": "^5.0.7",
    "sass": "^1.77.2",
    "storybook": "^8.6.14",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-scss": "^3.21.0",
    "tailwindcss": "^3.4.14"
  },
  "dependencies": {
    "@babel/preset-env": "^7.26.0",
    "@tailwindcss/typography": "^0.5.15",
    "buffer": "^6.0.3",
    "husky": "^9.0.11",
    "jquery": "^3.7.1",
    "js-yaml": "^4.1.0",
    "postcss-scss": "^4.0.9",
    "tailwindcss-animate": "^1.0.7",
    "twing": "^2.3.7",
    "twing-loader": "^2.0.2"
  }
}
