{% set blockContent %}

    {% block frontend_editing %}
        {{ content.frontend_editing }}
    {% endblock %}

        <div class="row-start-1 span-full">
            {% block image %}{% endblock %}
        </div>

        <div class="row-start-1 span-full inset-0 bg-neutral/40" aria-hidden="true">
        </div>

        <article
                class="row-start-1 isolate span-content md:col-start-[col-1] md:col-span-8 flex h-screen pb-24 stack-4 flex-col justify-end items-start">
            {% block title %}{% endblock %}
            <div class="text-2xl/10 max-w-2xl text-pretty font-[100] text-white"> {% block text %}{% endblock %}</div>
            <div class="flex gap-x-6"> {% block actions %}{% endblock %}</div>
        </article>


{% endset %}

{% embed "adesso_standard:block" %}

    {% block inner %}
        {{ blockContent }}
    {% endblock %}

{% endembed %}