{#
/**
 * @file
 * Theme override for fields in Gastgewerbe view.
 * Enhanced card layout with all new directory fields including opening hours.
 */
#}

{# Card structure with proper header image background #}
{% if fields.field_header_image.content|striptags|trim %}
  <div class="absolute inset-0 z-0">
    <img class="h-full w-full object-cover rounded-t-2xl" 
         src="{{ fields.field_header_image.content|striptags|trim }}" 
         alt="{{ fields.title.content|striptags|trim }} Header">
  </div>
  <div class="absolute inset-0 z-10 bg-gradient-to-t from-gray-900 via-gray-900/60 to-transparent rounded-t-2xl"></div>
{% else %}
  <div class="absolute inset-0 z-0 bg-gradient-to-br from-amber-500 to-orange-700 rounded-t-2xl"></div>
  <div class="absolute inset-0 z-10 bg-gradient-to-t from-gray-900/50 via-transparent to-transparent rounded-t-2xl"></div>
{% endif %}

{# Card overlay with ring #}
<div class="absolute inset-0 z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>

{# Main content #}
<div class="relative z-20 h-full flex flex-col">
  
  {# Header section with logo and verification badge #}
  <div class="flex items-start justify-between p-6">
    {# Logo section #}
    {% if fields.field_logo.content|striptags|trim %}
      <div class="flex-shrink-0">
        <img class="h-16 w-16 object-cover rounded-lg bg-white shadow-lg" 
             src="{{ fields.field_logo.content|striptags|trim }}" 
             alt="{{ fields.title.content|striptags|trim }} Logo">
      </div>
    {% endif %}
    
    {# Verification badge #}
    {% if fields.field_verified.content|striptags|trim == '1' %}
      <div class="flex-shrink-0 ml-4">
        <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
          <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          Verifiziert
        </span>
      </div>
    {% endif %}
  </div>

  {# Main content section #}
  <div class="flex-1 px-6">
    <h3 class="text-lg font-semibold text-white mb-2">
      {{ fields.title.content|striptags|trim }}
    </h3>
    
    {% if fields.field_description.content|striptags|trim %}
      <p class="text-sm text-gray-300 line-clamp-3 mb-4">
        {{ fields.field_description.content|striptags|trim }}
      </p>
    {% endif %}
    
    {# Opening hours - prominent for hospitality #}
    {% if fields.field_opening_hours.content|striptags|trim %}
      <div class="mb-3 p-2.5 bg-amber-100/10 rounded-lg border border-amber-400/20">
        <div class="flex items-center text-sm text-amber-200">
          <svg class="mr-2 h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-medium">{{ fields.field_opening_hours.content|striptags|trim }}</span>
        </div>
      </div>
    {% endif %}
    
    {% if fields.field_directory_category.content|striptags|trim %}
      <div class="mb-4">
        <span class="inline-flex items-center rounded-full bg-white/10 px-3 py-1 text-xs font-medium text-white">
          {{ fields.field_directory_category.content|striptags|trim }}
        </span>
      </div>
    {% endif %}
  </div>

  {# Contact section #}
  <div class="px-6 pb-4">
    {# Contact person info #}
    {% if fields.field_contact_name.content|striptags|trim or fields.field_contact_position.content|striptags|trim %}
      <div class="mb-3 p-3 bg-white/10 rounded-lg">
        <h4 class="text-xs font-medium text-gray-300 mb-1">Kontakt</h4>
        {% if fields.field_contact_name.content|striptags|trim %}
          <p class="text-sm font-medium text-white">{{ fields.field_contact_name.content|striptags|trim }}</p>
        {% endif %}
        {% if fields.field_contact_position.content|striptags|trim %}
          <p class="text-xs text-gray-400">{{ fields.field_contact_position.content|striptags|trim }}</p>
        {% endif %}
      </div>
    {% endif %}

    {# Contact information #}
    <div class="space-y-2">
      {% if fields.field_phone.content|striptags|trim %}
        <div class="flex items-center text-sm text-gray-300">
          <svg class="mr-2 h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <a href="tel:{{ fields.field_phone.content|striptags|trim }}" class="hover:text-white transition-colors">
            {{ fields.field_phone.content|striptags|trim }}
          </a>
        </div>
      {% endif %}

      {% if fields.field_email.content|striptags|trim %}
        <div class="flex items-center text-sm text-gray-300">
          <svg class="mr-2 h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <a href="mailto:{{ fields.field_email.content|striptags|trim }}" class="hover:text-white transition-colors truncate">
            {{ fields.field_email.content|striptags|trim }}
          </a>
        </div>
      {% endif %}

      {% if fields.field_website.content|striptags|trim %}
        <div class="flex items-center text-sm text-gray-300">
          <svg class="mr-2 h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          <a href="{{ fields.field_website.content|striptags|trim }}" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors truncate">
            Website
          </a>
        </div>
      {% endif %}
    </div>

    {# Social media links #}
    {% if fields.field_social_media_facebook.content|striptags|trim or fields.field_social_media_instagram.content|striptags|trim %}
      <div class="flex items-center space-x-3 mt-3 pt-3 border-t border-white/10">
        {% if fields.field_social_media_facebook.content|striptags|trim %}
          <a href="{{ fields.field_social_media_facebook.content|striptags|trim }}" target="_blank" rel="noopener noreferrer" 
             class="text-gray-400 hover:text-blue-400 transition-colors">
            <span class="sr-only">Facebook</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        {% endif %}

        {% if fields.field_social_media_instagram.content|striptags|trim %}
          <a href="{{ fields.field_social_media_instagram.content|striptags|trim }}" target="_blank" rel="noopener noreferrer" 
             class="text-gray-400 hover:text-pink-400 transition-colors">
            <span class="sr-only">Instagram</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.151 14.81 3.67 13.549 3.67 12.017c0-1.532.48-2.793 1.456-3.674.875-.807 2.026-1.297 3.323-1.297 1.297 0 2.448.49 3.323 1.297.975.88 1.456 2.142 1.456 3.674 0 1.532-.48 2.793-1.456 3.674-.875.807-2.026 1.297-3.323 1.297zm7.74 0c-1.297 0-2.448-.49-3.323-1.297-.975-.88-1.456-2.142-1.456-3.674 0-1.532.48-2.793 1.456-3.674.875-.807 2.026-1.297 3.323-1.297 1.297 0 2.448.49 3.323 1.297.975.88 1.456 2.142 1.456 3.674 0 1.532-.48 2.793-1.456 3.674-.875.807-2.026 1.297-3.323 1.297z"/>
            </svg>
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>

</div>