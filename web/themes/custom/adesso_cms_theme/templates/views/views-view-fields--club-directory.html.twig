{#
/**
 * @file
 * Theme override for views fields for Club Directory.
 *
 * Available variables:
 * - view: The view object.
 * - field: Field-specific data.
 * - row: The raw result object from the query.
 * - fields: All field objects for this row.
 */
#}

<li class="flex justify-between gap-x-6 py-5">
  <div class="flex min-w-0 gap-x-4">


    <div class="min-w-0 flex-auto">
      {% if fields.title %}
        <p class="text-sm/6 font-semibold text-gray-900">
          {{ fields.title.content }}
        </p>
      {% endif %}
      
      {# Display contact person info from person profile #}
      {% if fields.field_contact_person %}
        {% set contact_person_content = fields.field_contact_person.content %}
        {% if contact_person_content %}
          <p class="mt-1 truncate text-xs/5 text-gray-500">
            Kontakt: {{ contact_person_content|trim }}
          </p>
        {% endif %}
      {% elseif fields.field_email %}
        {% set email_content = fields.field_email.content|trim %}
        {% if email_content %}
          <p class="mt-1 truncate text-xs/5 text-gray-500">{{ email_content }}</p>
        {% endif %}
      {% endif %}
    </div>
  </div>

  <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
    {% if fields.field_president %}
      {% set president_content = fields.field_president.content|trim %}
      {% if president_content %}
        <p class="text-sm/6 text-gray-900">Pr√§sident/in: {{ president_content }}</p>
      {% endif %}
    {% elseif fields.field_description %}
      {% set description_content = fields.field_description.content|trim %}
      {% if description_content|length > 50 %}
        <p class="text-sm/6 text-gray-900">{{ description_content|slice(0, 50) }}...</p>
      {% else %}
        <p class="text-sm/6 text-gray-900">{{ description_content }}</p>
      {% endif %}
    {% endif %}

    {# Category badges where "Online" status would be #}
    <div class="mt-1 flex items-center gap-x-1.5">
      {% if fields.field_vereinskategorie %}
        {% set category_terms = fields.field_vereinskategorie.content %}
        {% if category_terms %}
          <div class="flex flex-wrap gap-1">
            {% for term in category_terms['#items'] %}
              {% set term_name = term.entity.name.value %}
              {% if term_name %}
                <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                  {{ term_name }}
                </span>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}

      {% if fields.field_vereinsstatus %}
        {% set status_terms = fields.field_vereinsstatus.content %}
        {% if status_terms %}
          {% for term in status_terms['#items'] %}
            {% set status_name = term.entity.name.value %}
            {% if status_name %}
              <div class="flex items-center gap-x-1.5 ml-2">
                {% if status_name == 'Aktiv' %}
                  <div class="flex-none rounded-full bg-emerald-500/20 p-1">
                    <div class="size-1.5 rounded-full bg-emerald-500"></div>
                  </div>
                  <p class="text-xs/5 text-gray-500">{{ status_name }}</p>
                {% elseif status_name == 'Inaktiv' %}
                  <div class="flex-none rounded-full bg-gray-500/20 p-1">
                    <div class="size-1.5 rounded-full bg-gray-500"></div>
                  </div>
                  <p class="text-xs/5 text-gray-500">{{ status_name }}</p>
                {% else %}
                  <div class="flex-none rounded-full bg-yellow-500/20 p-1">
                    <div class="size-1.5 rounded-full bg-yellow-500"></div>
                  </div>
                  <p class="text-xs/5 text-gray-500">{{ status_name }}</p>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        {% endif %}
      {% endif %}

    </div>
  </div>
</li>