{#
/**
 * @file
 * Theme override for unformatted rows in Firmen view.
 * Based on events view template.
 */
#}
{% if title %}
  <h3>{{ title }}</h3>
{% endif %}

{# Grid using Tailwind CSS with enhanced card dimensions for directory content #}
<div class="grid grid-cols-1 gap-8 lg:grid-cols-2 xl:grid-cols-3">
  {% for row in rows %}
    {% set row_classes = [
      'relative isolate flex flex-col overflow-hidden rounded-2xl bg-gray-900 min-h-[600px]',
      default_row_class ? 'views-row',
    ] %}
    <article{{ row.attributes.addClass(row_classes) }}>
      {{ row.content }}
    </article>
  {% endfor %}
</div>