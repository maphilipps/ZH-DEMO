{#
/**
 * @file
 * Theme override for webform.
 *
 * Available variables:
 * - element: The webform element.
 * - title: The webform title.
 * - description: The webform description.
 * - form: The webform form.
 *
 * @see template_preprocess_webform()
 */
#}

<div class="webform-wrapper container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    {% if title %}
      <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ title }}</h1>
    {% endif %}
    
    {% if description %}
      <div class="text-gray-600 mb-8 prose prose-lg">
        {{ description }}
      </div>
    {% endif %}
    
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      {{ form }}
    </div>
  </div>
</div>