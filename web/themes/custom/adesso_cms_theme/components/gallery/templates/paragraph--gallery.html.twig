{#
/**
 * @file
 * Theme override for gallery paragraph.
 */
#}
{% set is_dark = paragraph.field_content_element_theme.value %}

<div{{ attributes }}>
  {{ title_prefix }}
  {{ title_suffix }}
  {{ content.frontend_editing }}
  
  <section class="{{ is_dark ? 'bg-gray-100' : 'bg-white' }}">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
      {# Title section with proper formatting #}
      <div class="max-w-4xl mx-auto text-center mb-8">
        {% if content.field_pre_headline|render|striptags|trim %}
          <span class="block mb-4 text-2xl font-bold tracking-tight leading-none text-gray-900">
            {{ content.field_pre_headline }}
          </span>
        {% endif %}
        {% if content.field_title|render|striptags|trim %}
          <h2 class="text-3xl font-bold mb-8 text-gray-900">
            {{ content.field_title }}
          </h2>
        {% endif %}
      </div>
      
      {# Gallery grid with 4 columns and proper spacing #}
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6">
        {{ content.field_media_item }}
      </div>
    </div>
  </section>
</div>
