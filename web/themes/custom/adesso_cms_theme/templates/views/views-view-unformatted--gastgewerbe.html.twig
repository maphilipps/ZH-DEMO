{#
/**
 * @file
 * Theme override for unformatted rows in Gastgewerbe view.
 * Based on events view template.
 */
#}
{% if title %}
  <h3>{{ title }}</h3>
{% endif %}

{# Grid using Tailwind CSS #}
<div class="grid auto-rows-fr grid-cols-1 gap-8 lg:grid-cols-3">
  {% for row in rows %}
    {% set row_classes = [
      'relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pt-80 pb-8 sm:pt-48',
      default_row_class ? 'views-row',
    ] %}
    <article{{ row.attributes.addClass(row_classes) }}>
      {{ row.content }}
    </article>
  {% endfor %}
</div>