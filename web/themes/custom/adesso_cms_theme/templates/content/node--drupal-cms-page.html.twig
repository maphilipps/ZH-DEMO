{#
/**
 * @file
 * Theme override to display a drupal_cms_page node.
 * Page header is now handled by page.html.twig
 */
#}
{% set classes = [
  'node',
  'node--type-' ~ node.bundle|clean_class,
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
] %}

<article{{ attributes.addClass(classes) }}>
  <div class="mx-auto max-w-7xl p-4 sm:px-6 lg:px-8">
    
    <div class="mx-auto max-w-2xl">
      {{ title_prefix }}
      {# Title is now handled by the page header component above #}
      {{ title_suffix }}

      {% if content.body %}
        <div class="prose prose-lg mt-8">
          {{ content.body }}
        </div>
      {% endif %}

      {# Render paragraphs/components if present #}
      {% if content.field_paragraphs %}
        <div class="components mt-8">
          {{ content.field_paragraphs }}
        </div>
      {% endif %}

      {# Render remaining content (excluding fields used in page header) #}
      {{ content|without('field_featured_image', 'field_header_image', 'field_media', 'field_paragraphs', 'body', 'field_lead', 'field_summary', 'field_description', 'links') }}
    </div>
  </div>
</article>
