{
  "name": "adesso_cms_theme",
  "version": "1.3.0",
  "type": "module",
  "description": "adesso CMS Theme - Modern Drupal theme with Vite, Tailwind CSS v4, and Drupal Storybook integration",
  "scripts": {
    "dev": "vite",
    "dev:ddev": "DDEV_PROJECT_TYPE=drupal11 vite --host 0.0.0.0 --port 5173",
    "dev:concurrent": "concurrently \"npm run dev:ddev\" \"npm run storybook\"",
    "dev:watch": "concurrently \"npm run watch\" \"npm run storybook\"",
    "build": "npm run build:clean && NODE_ENV=production vite build && npm run build:optimize",
    "build:dev": "npm run build:clean:dev && NODE_ENV=development vite build",
    "build:clean": "rimraf dist/assets dist/js dist/css && find dist -name '*.js' -o -name '*.css' -o -name '*.map' | head -50 | xargs rm -f",
    "build:clean:dev": "find dist -name '*.map' | xargs rm -f",
    "build:optimize": "npm run build:gzip && npm run build:report",
    "build:gzip": "find dist/assets -name '*.js' -o -name '*.css' | xargs gzip -k",
    "build:report": "echo 'Build completed. Asset summary:' && find dist/assets -type f -name '*.js' -o -name '*.css' | xargs ls -lh | awk '{print $5 \"\t\" $9}' | sort -hr",
    "watch": "vite build --watch --mode development",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:storybook": "test-storybook",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint:js": "eslint components/**/*.behavior.js --fix",
    "lint:prettier": "prettier --write \"src/**/*.{js,css}\" \"components/**/*.{js,twig}\"",
    "qa:validate": "npm run test && npm run lint:js && npm run lint:prettier",
    "qa:visual": "npm run visual:test",
    "qa:e2e": "npm run test:e2e",
    "qa:storybook": "npm run test:storybook",
    "qa:full": "npm run qa:validate && npm run qa:visual && npm run qa:e2e && npm run qa:storybook",
    "start": "npm run dev:concurrent",
    "start:watch": "npm run dev:watch",
    "storybook": "storybook dev -p 6006 --host 0.0.0.0",
    "build-storybook": "storybook build",
    "backstop:reference": "backstop reference",
    "backstop:test": "backstop test",
    "backstop:approve": "backstop approve",
    "backstop:openReport": "backstop openReport",
    "visual:reference": "npm run backstop:reference",
    "visual:test": "npm run backstop:test",
    "visual:approve": "npm run backstop:approve",
    "visual:report": "npm run backstop:openReport",
    "migration:test": "npm run migration:slots && npm run migration:visual && npm run migration:performance",
    "migration:slots": "vitest run tests/slot-migration-validation.test.js",
    "migration:visual": "backstop test --config=backstop-component-migration.json",
    "migration:visual:reference": "backstop reference --config=backstop-component-migration.json",
    "migration:visual:approve": "backstop approve --config=backstop-component-migration.json",
    "migration:performance": "node performance-migration-benchmark.js",
    "migration:storybook": "test-storybook --config-dir .storybook --test-runner-config .storybook/test-runner-config.js",
    "migration:full": "npm run migration:slots && npm run migration:storybook && npm run migration:visual && npm run migration:performance"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-essentials": "8.6.7",
    "@storybook/addon-links": "8.6.7",
    "@storybook/html-vite": "8.6.7",
    "@storybook/manager-api": "8.6.7",
    "@storybook/test-runner": "^0.19.1",
    "@storybook/theming": "8.6.7",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.0.9",
    "@testing-library/jest-dom": "^6.6.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@whitespace/storybook-addon-html": "^7.0.0",
    "autoprefixer": "^10.4.20",
    "backstopjs": "^6.3.25",
    "browserslist-to-esbuild": "^2.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-storybook": "^0.10.2",
    "glob": "^10.4.0",
    "globals": "^15.15.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "cssnano": "^7.0.7",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "storybook": "8.6.7",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^23.0.0",
    "tailwindcss": "^4.0.0",
    "terser": "^5.36.0",
    "vite": "^6.2.0",
    "vite-plugin-twig-drupal": "^1.6.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindplus/elements": "^1.0.8",
    "flowbite": "^3.1.2",
    "swiper": "^11.2.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
