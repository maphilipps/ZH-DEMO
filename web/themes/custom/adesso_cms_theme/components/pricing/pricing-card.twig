{# pricing-card.twig #}
<div class="bg-card text-card-foreground flex h-full flex-col justify-between p-4 sm:p-6 md:p-8">
  <div>
    {% include 'adesso_cms_theme:heading' with { heading: { title: pre_headline, as: 'h2', custom_classes: 'mb-2 text-md
    font-bold leading-[1.4] md:text-xl' } } %} {% include 'adesso_cms_theme:heading' with { heading: { title: title, as:
    'span', visual_level: '1', custom_classes: 'block my-2 text-2xl font-bold sm:text-3xl lg:text-4xl' } } %}
    <div class="my-4 sm:my-8 h-px w-full bg-border"></div>
    <p class="text-sm sm:text-base">{{ includes_label|default('Includes') }}:</p>
    <div class="mb-6 sm:mb-8 mt-3 sm:mt-4 grid grid-cols-1 gap-y-3 sm:gap-y-4 py-2">
      {% for feature in features %}
      <div class="flex self-start">
        <div class="mr-3 sm:mr-4 flex-none self-start">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-check size-5 sm:size-6"
          >
            <path d="M20 6 9 17l-5-5"></path>
          </svg>
        </div>
        <p class="text-sm sm:text-base">{{ feature }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
  {% if cta_link %}
  <div>
    {% include 'adesso_cms_theme:button' with {
      url: cta_link.url,
      text: cta_link.title,
      variant: 'default',
      size: 'default',
      modifier: 'w-full'
    } %}
  </div>
  {% endif %}
</div>
