        DESCRIPTION="Mobile-only scan (375x667 viewport)"
        print_info "ğŸ“± Mobile-Only Mode - Issue #18 spec: 375x667"
        ;;
    --desktop)
        CONFIG_FILE="desktop-only.ts"
        MODE="desktop"
        DESCRIPTION="Desktop-only scan (1920x1080 viewport)"
        print_info "ğŸ’» Desktop-Only Mode - Issue #18 spec: 1920x1080"
        ;;
    --help|-h)
        echo ""
        echo "ğŸ” ZH-DEMO Unlighthouse Commands (Issue #18 Implementation):"
        echo ""
        echo "  ddev unlighthouse              Full scan (mobile + desktop)"
        echo "  ddev unlighthouse --demo-check Quick demo validation (<5 min)"
        echo "  ddev unlighthouse --mobile     Mobile-only scan (375x667)"
        echo "  ddev unlighthouse --desktop    Desktop-only scan (1920x1080)"
        echo "  ddev unlighthouse --help       Show this help message"
        echo ""
        echo "ğŸ‡¨ğŸ‡­ Swiss Compliance Features:"
        echo "  âœ“ WCAG 2.1 AA validation"
        echo "  âœ“ eCH-0059 government standards"
        echo "  âœ“ Performance budget: 90+ (government sites)"
        echo "  âœ“ Accessibility budget: 95+ (Swiss compliance)"
        echo "  âœ“ Multi-viewport testing (mobile + desktop)"
