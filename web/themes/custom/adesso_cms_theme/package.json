{
  "name": "adesso_cms_theme",
  "version": "1.3.0",
  "type": "module",
  "description": "adesso CMS Theme - Modern Drupal theme with Vite, Tailwind CSS v4, and Drupal Storybook integration",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run compile",
    "compile": "node compile.cjs",
    "watch": "vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint:js": "eslint components/**/*.behavior.js --fix",
    "lint:sass": "stylelint 'src/**/*.css' 'components/**/*.scss'",
    "scss-fix": "stylelint './src/**/*.css' './components/**/*.scss' --fix",
    "qa:validate": "npm run test && npm run lint:js && npm run lint:sass",
    "storybook": "storybook dev -p 6006 --host 0.0.0.0"
  },
  "devDependencies": {
    "@alexskrypnyk/scss-variables-extractor": "^0.1.1",
    "@storybook/addon-essentials": "8.6.7",
    "@storybook/addon-links": "8.6.7",
    "@storybook/html-vite": "8.6.7",
    "@storybook/manager-api": "8.6.7",
    "@storybook/theming": "8.6.7",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.0.9",
    "@testing-library/jest-dom": "^6.6.4",
    "@vitest/ui": "^3.2.4",
    "@whitespace/storybook-addon-html": "^7.0.0",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import-newlines": "^1.4.0",
    "glob": "^11.0.1",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "rimraf": "^5.0.10",
    "sass": "^1.85.1",
    "sass-embedded": "1.77.5",
    "storybook": "8.6.7",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-config-standard-scss": "^2.0.1",
    "tailwindcss": "^4.0.0",
    "vite": "^6.2.0",
    "vite-plugin-twig-drupal": "^1.6.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@storybook/html-vite": "^9.0.18",
    "@tailwindcss/typography": "^0.5.16",
    "flowbite": "^3.1.2",
    "jquery": "^3.7.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swiper": "^11.2.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
