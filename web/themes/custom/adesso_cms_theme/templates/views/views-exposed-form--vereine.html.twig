{#
/**
 * @file
 * Theme override for exposed filter form.
 */
#}
{% if q is not empty %}
  {{ q }}
{% endif %}

<form{{ attributes.addClass('flex gap-4 items-end') }}>
  {% if form.title %}
    <div class="flex-1">
      <label for="edit-title" class="block text-sm font-medium text-gray-700 mb-1">{{ 'Suche'|t }}</label>
      {{ form.title }}
    </div>
  {% endif %}

  <div class="flex gap-2">
    {{ form.actions }}
  </div>

  {{ form.form_build_id }}
  {{ form.form_token }}
  {{ form.form_id }}
</form>