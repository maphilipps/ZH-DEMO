{%
  set classes = []
%}

{%
  set link = content.field_link[0] ? {
    url: content.field_link[0]['#url']|render,
    title: content.field_link[0]['#title']|render,
  } : {}
%}

<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{{ title_suffix }}

	{% block content %}
    {{ content.frontend_editing }}
		{%
      include 'adesso_cms_theme:sidebyside' with {
        title: content.field_title|render,
        text: content.field_summary|render,
        link: link,
        media: content.field_media,
        layout: content.field_sidebyside_layout['#items'].getString() ?? 'left',
        features: features
      } only
    %}
	{% endblock %}
</div>
