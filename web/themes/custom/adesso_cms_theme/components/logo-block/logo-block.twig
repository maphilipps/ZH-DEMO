{#
 * @file
 * Logo Block Component
 * Displays site logo and/or name for header left region
 #}

<a href="/" class="flex items-center gap-3" aria-label="{{ 'Homepage'|t }}">
  {% if show_logo|default(false) and site_logo|default('') %}
    <img 
      src="{{ site_logo|default('') }}" 
      alt="{{ site_name|default('') ~ ' Logo' }}"
      class="h-8 sm:h-10 w-auto"
      loading="eager"
    />
  {% endif %}
  
  {% if show_site_name|default(false) %}
    <span class="text-xl font-bold text-gray-900 dark:text-white">
      {{ site_name|default('') }}
    </span>
  {% endif %}
</a>