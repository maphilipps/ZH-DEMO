{#
/**
 * @file
 * Clean search results template - NO RAW FILTERS to prevent theme debug
 */
#}

{# Extract and clean field values #}
{%- set title_clean = fields.title.content|striptags|trim -%}
{%- set content_type_clean = fields.type.content|striptags|trim -%}
{%- set excerpt_clean = fields.search_api_excerpt.content|striptags|trim -%}
{%- set relevance_raw = fields.search_api_relevance.content|striptags -%}
{%- set relevance_percent = (relevance_raw * 100)|round -%}

<article class="search-result-card bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 p-6 mb-4">
  
  {# Title #}
  {%- if title_clean %}
    <h3 class="text-xl font-semibold text-gray-900 mb-3">
      {{ title_clean }}
    </h3>
  {%- endif %}

  {# Content type badge #}
  {%- if content_type_clean %}
    <div class="mb-3">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
        {{ content_type_clean }}
      </span>
    </div>
  {%- endif %}

  {# Excerpt #}
  {%- if excerpt_clean %}
    <div class="text-gray-700 mb-4">
      {{ excerpt_clean }}
    </div>
  {%- endif %}

  {# Relevance score #}
  {%- if relevance_percent > 0 %}
    <div class="mb-4">
      <span class="inline-flex items-center bg-green-100 text-green-800 px-2 py-1 rounded text-sm">
        {{ relevance_percent }}% Match
      </span>
    </div>
  {%- endif %}

  {# Municipal verification #}
  <div class="text-sm text-gray-500">
    <span class="inline-flex items-center">
      <svg class="w-4 h-4 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      Verified by Gemeinde Bruchtal
    </span>
  </div>

</article>