<div class="hidden duration-700 ease-in-out {{ item_class|default('') }}" data-carousel-item{% if is_active|default(false) %}="active"{% endif %}>
  <div class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2">
    {% if item.media|default('') %}
      {{ item.media|default('') }}
    {% else %}
      <div class="flex items-center justify-center w-full h-full bg-gray-300 dark:bg-gray-700">
        <svg class="w-10 h-10 text-gray-200 dark:text-gray-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
          <path d="M18 0H2a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2Zm-5.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm4.376 10.481A1 1 0 0 1 16 15H4a1 1 0 0 1-.895-1.447l3.5-7A1 1 0 0 1 7.468 6a.965.965 0 0 1 .9.5l2.775 4.757 1.546-1.887a1 1 0 0 1 1.618.1l2.541 4a1 1 0 0 1 .028 1.011Z"/>
        </svg>
      </div>
    {% endif %}
    
    {# Content overlay #}
    {% if item.title|default('') or item.summary|default('') %}
      <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent text-white p-4 md:p-6">
        {% if item.title|default('') %}
          {% include 'adesso_cms_theme:heading' with {
            heading: {
              title: item.title,
              as: 'h3',
              visual_level: '2',
              custom_classes: 'text-xl md:text-3xl font-semibold mb-2 text-white'
            }
          } %}
        {% endif %}
        {% if item.summary|default('') %}
          <p class="text-sm md:text-lg opacity-90">{{ item.summary|default('') }}</p>
        {% endif %}
        {% if item.link.url|default('') %}
          <a href="{{ item.link.url|default('') }}" class="inline-block mt-3 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-lg hover:bg-white/30 transition-colors">
            {{ item.link.title|default('Learn More') }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>
