<section class="py-8 md:py-12 bg-white">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row md:items-center">
      {% if pre_headline %}
        <p class="text-lg text-primary font-semibold uppercase tracking-wide">{{ pre_headline }}</p>
      {% endif %}
      <h2 class="text-xl font-bold text-gray-800 mb-6 md:mb-0 md:w-1/5 md:pr-4 md:flex-shrink-0 text-center md:text-left">
        {{ title }}
      </h2>
      {% if sub_headline %}
        <p class="text-lg text-gray-600">{{ sub_headline }}</p>
      {% endif %}
      <div class="grid grid-cols-2 gap-6 sm:grid-cols-3 md:flex md:flex-wrap md:justify-end md:items-center md:gap-8 md:w-5/6">
        {% block logo_items %}
          {% for logo in logos %}
            <div class="flex items-center justify-center md:justify-start">
              {% if logo.media is not empty %}
                <div class="max-w-[100px] md:max-w-[120px] h-auto">
                  {{ logo.media }}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        {% endblock %}
      </div>
    </div>
  </div>
</section>
