{# pricing.twig #}
<div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
  <div class="mx-auto max-w-lg text-center mb-8">
    {% if pre_headline %}
      <h3 class="mb-4 text-2xl font-bold tracking-tight leading-none text-gray-900">
        {{ pre_headline }}
      </h3>
    {% endif %}
    {% if title %}
      <h2 class="text-3xl font-bold mb-4">{{ title }}</h2>
    {% endif %}
    {% if summary %}
      <div class="text-gray-600">{{ summary|raw }}</div>
    {% endif %}
  </div>
  <div class="grid grid-cols-1 gap-6 sm:gap-8 {{ grid_columns == 2 ? 'md:grid-cols-2 max-w-5xl mx-auto' : 'md:grid-cols-3' }}">
    {% block pricing_cards %}
      {% for card in cards %}
        {% include '@adesso_cms_theme/pricing/pricing-card.twig' with {
          pre_headline: card.eyebrow,
          title: card.title,
          monthly_label: card.monthly_label,
          features: card.features,
          cta_text: card.cta_text,
          cta_link: card.cta_link,
          includes_label: card.includes_label,
        } %}
      {% endfor %}
    {% endblock %}
  </div>
</div>
