<div class="bg-white">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    {% if pre_headline %}
      <p class="mb-2 text-lg font-medium text-center text-black">
        {{ pre_headline }}
      </p>
    {% endif %}

    {% if title %}
      <h2 class="mb-6 lg:mb-8 text-3xl lg:text-4xl tracking-tight font-extrabold text-center text-black">
        {{ title }}
      </h2>
    {% endif %}

    <div id="accordion-flush" data-accordion="collapse"
         class="mx-auto max-w-screen-md border-t border-gray-200">
      <div>
        {% block accordion_items %}
          {% for item in accordion_items %}
            {% include '@adesso_cms_theme/accordion/accordion-item.twig' with {
              item: item,
              is_expanded: loop.first,
              accordion_instance: loop.index
            } only %}
          {% endfor %}
        {% endblock %}
      </div>
    </div>
  </div>
</div>
