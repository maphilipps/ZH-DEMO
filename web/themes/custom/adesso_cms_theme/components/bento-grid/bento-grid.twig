{% set background_class = background_color|default('bg-gray-50') %} {% set container_class =
container_classes|default('') %}

<div class="{{ background_class }} py-24 sm:py-32 {{ container_class }}" data-bento-grid>
  <div class="mx-auto max-w-2xl px-6 lg:container lg:px-8">
    {% if eyebrow %}
    <h2 class="text-center text-base/7 font-semibold text-indigo-600">{{ eyebrow }}</h2>
    {% endif %} {% if title %}
    <p
      class="mx-auto mt-2 max-w-lg text-center text-4xl font-semibold tracking-tight text-balance text-gray-950 sm:text-5xl"
    >
      {{ title }}
    </p>
    {% endif %} {% if description %}
    <p class="mx-auto mt-4 max-w-2xl text-center text-lg text-gray-600">{{ description }}</p>
    {% endif %} {% if grid_items %}
    <div class="mt-10 grid gap-4 sm:mt-16 lg:grid-cols-3 lg:grid-rows-2">
      {% for item in grid_items %} {% set grid_classes = '' %} {% set background_classes = '' %} {% set rounded_classes
      = '' %} {% if item.grid_area == 'large-left' %} {% set grid_classes = 'relative lg:row-span-2' %} {% set
      background_classes = 'absolute inset-px rounded-lg bg-white lg:rounded-l-4xl' %} {% set rounded_classes =
      'relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-l-[calc(2rem+1px)]'
      %} {% elseif item.grid_area == 'top-right' %} {% set grid_classes = 'relative max-lg:row-start-1' %} {% set
      background_classes = 'absolute inset-px rounded-lg bg-white max-lg:rounded-t-4xl' %} {% set rounded_classes =
      'relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]
      max-lg:rounded-t-[calc(2rem+1px)]' %} {% elseif item.grid_area == 'middle-right' %} {% set grid_classes =
      'relative max-lg:row-start-3 lg:col-start-2 lg:row-start-2' %} {% set background_classes = 'absolute inset-px
      rounded-lg bg-white' %} {% set rounded_classes = 'relative flex h-full flex-col overflow-hidden
      rounded-[calc(var(--radius-lg)+1px)]' %} {% elseif item.grid_area == 'large-right' %} {% set grid_classes =
      'relative lg:row-span-2' %} {% set background_classes = 'absolute inset-px rounded-lg bg-white
      max-lg:rounded-b-4xl lg:rounded-r-4xl' %} {% set rounded_classes = 'relative flex h-full flex-col overflow-hidden
      rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-b-[calc(2rem+1px)] lg:rounded-r-[calc(2rem+1px)]' %} {% else
      %} {% set grid_classes = 'relative' %} {% set background_classes = 'absolute inset-px rounded-lg bg-white' %} {%
      set rounded_classes = 'relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]' %} {%
      endif %}

      <div
        class="{{ grid_classes }} {{ item.custom_classes|default('') }}"
        data-grid-item
        data-grid-area="{{ item.grid_area }}"
        data-content-type="{{ item.content_type|default('text') }}"
      >
        <div class="{{ background_classes }}"></div>
        <div class="{{ rounded_classes }}">
          <div
            class="px-8 pt-8 {% if item.grid_area in ['large-left', 'large-right'] %}pb-3{% endif %} sm:px-10 sm:pt-10 {% if item.grid_area in ['large-left', 'large-right'] %}sm:pb-0{% endif %}"
          >
            {% if item.title %}
            <p class="mt-2 text-lg font-medium tracking-tight text-gray-950 max-lg:text-center">{{ item.title }}</p>
            {% endif %} {% if item.description %}
            <p class="mt-2 max-w-lg text-sm/6 text-gray-600 max-lg:text-center">{{ item.description }}</p>
            {% endif %}
          </div>

          {% if item.content_type == 'image' and item.image %} {% if item.grid_area == 'large-left' %}
          <div class="@container relative min-h-120 w-full grow max-lg:mx-auto max-lg:max-w-sm">
            <div
              class="absolute inset-x-10 top-10 bottom-0 overflow-hidden rounded-t-[12cqw] border-x-[3cqw] border-t-[3cqw] border-gray-700 bg-gray-900 shadow-2xl"
            >
              <img
                src="{{ item.image }}"
                alt="{{ item.image_alt|default('') }}"
                class="size-full object-cover object-top"
              />
            </div>
          </div>
          {% elseif item.grid_area == 'top-right' %}
          <div class="flex flex-1 items-center justify-center px-8 max-lg:pt-10 max-lg:pb-12 sm:px-10 lg:pb-2">
            <img src="{{ item.image }}" alt="{{ item.image_alt|default('') }}" class="w-full max-lg:max-w-xs" />
          </div>
          {% elseif item.grid_area == 'middle-right' %}
          <div class="@container flex flex-1 items-center max-lg:py-6 lg:pb-2">
            <img
              src="{{ item.image }}"
              alt="{{ item.image_alt|default('') }}"
              class="h-[min(152px,40cqw)] object-cover"
            />
          </div>
          {% else %}
          <div class="flex flex-1 items-center justify-center px-8 py-6">
            <img src="{{ item.image }}" alt="{{ item.image_alt|default('') }}" class="w-full max-w-md" />
          </div>
          {% endif %} {% elseif item.content_type == 'code' and item.code_content %}
          <div class="relative min-h-120 w-full grow">
            <div
              class="absolute top-10 right-0 bottom-0 left-10 overflow-hidden rounded-tl-xl bg-gray-900 shadow-2xl outline outline-white/10"
            >
              <div class="flex bg-gray-900 outline outline-white/5">
                <div class="-mb-px flex text-sm/6 font-medium text-gray-400">
                  <div class="border-r border-b border-r-white/10 border-b-white/20 bg-white/5 px-4 py-2 text-white">
                    {{ item.code_language|default('jsx')|title }}.{{ item.code_language|default('jsx') }}
                  </div>
                  <div class="border-r border-gray-600/10 px-4 py-2">App.{{ item.code_language|default('jsx') }}</div>
                </div>
              </div>
              <div class="px-6 pt-6 pb-14">
                <pre class="text-sm text-gray-300"><code>{{ item.code_content }}</code></pre>
              </div>
            </div>
          </div>
          {% elseif item.content_type == 'chart' %}
          <div class="flex flex-1 items-center justify-center px-8 py-6">
            <div class="w-full max-w-sm">
              <div
                class="h-32 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center"
              >
                <span class="text-white font-semibold">Chart Placeholder</span>
              </div>
            </div>
          </div>
          {% endif %}
        </div>

        {% set outline_classes = 'pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5' %}
        {% if item.grid_area == 'large-left' %} {% set outline_classes = outline_classes ~ ' lg:rounded-l-4xl' %} {%
        elseif item.grid_area == 'top-right' %} {% set outline_classes = outline_classes ~ ' max-lg:rounded-t-4xl' %} {%
        elseif item.grid_area == 'large-right' %} {% set outline_classes = outline_classes ~ ' max-lg:rounded-b-4xl
        lg:rounded-r-4xl' %} {% endif %}
        <div class="{{ outline_classes }}"></div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</div>
