<div class="bg-card text-card-foreground overflow-hidden">
  <a href="{{ url }}" class="block">
    <div style="position: relative; width: 100%; padding-bottom: 56.25%">
      <div style="position: absolute; inset: 0">{{ media }}</div>
    </div>
  </a>

  <div class="flex flex-col space-y-1.5 p-6">
    {% include 'adesso_cms_theme:heading' with { heading: { title: '
    <a href="' ~ url ~ '" class="hover:underline">' ~ title ~ '</a>
    ', as: 'span', visual_level: '3', custom_classes: 'block font-semibold tracking-tight text-3xl' } } %}
  </div>

  <div class="p-6 pt-0">
    <p class="text-sm text-gray-600">{{ summary }}</p>
  </div>
</div>
