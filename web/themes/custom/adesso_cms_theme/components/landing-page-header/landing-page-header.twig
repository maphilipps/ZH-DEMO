{#
/**
 * @file
 * Landing page header component that combines navigation with hero.
 * 
 * This component provides a unified header for landing pages that includes:
 * - Transparent navigation overlay
 * - Hero section with background image and content
 * - Proper positioning and styling
 */
#}

{# 
  Adjust margins to handle:
  1. Admin toolbar presence (when logged in)
  2. Site header offset (always present above landing page)
  
  The site header adds ~138px height, so we need negative margin to pull up
  the landing header to eliminate the white gap between them.
#}
{% set margin_classes = has_admin_toolbar ? '-mt-[138px]' : '-mt-[138px]' %}

<div class="relative isolate overflow-hidden bg-gray-900 pt-32 pb-24 sm:pb-32 {{ margin_classes }}">
  {# Background Image #}
  {% if background_image %}
    <img src="{{ background_image }}" 
         alt="{{ alt_text|default('') }}" 
         class="absolute inset-0 -z-10 size-full object-cover" />
    {# Landing page specific gradient overlay #}
    <div class="absolute inset-0 -z-5" 
         style="background: linear-gradient(to bottom, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.6) 15%, rgba(0,0,0,0.1) 35%, rgba(0,0,0,0.3) 70%, rgba(0,0,0,0.8) 100%);"></div>
  {% else %}
    {# Fallback gradient background #}
    <div class="absolute inset-0 -z-10 bg-gradient-to-b from-gray-800 via-gray-900 to-black"></div>
  {% endif %}
  
  {# Hero Content Section #}
  <div class="mx-auto container px-6 lg:px-8 pt-48">
    <div class="mx-auto max-w-5xl lg:mx-0">
      {% if title %}
        <h1 class="text-6xl font-bold tracking-tight text-white sm:text-8xl lg:text-9xl text-primary text-shadow-lg/40">
          {{ title }}
        </h1>
      {% endif %}
      
      {% if description %}
        <p class="ml-6 font-medium text-pretty text-primary sm:text-2xl/relaxed lg:text-9xl/relaxed font-dancing text-primary text-shadow-lg/30">
          {{ description }}
        </p>
      {% endif %}
    </div>
  </div>
</div>