{% set classes = [
  'paragraph',
  'paragraph--type--text',
  'container',
] %}

<div{{ attributes.addClass(classes) }}>
  {% if content_width == 'narrow' %}
    <div class="max-w-4xl mx-auto">
      {{ content.field_text }}
    </div>
  {% else %}
    {{ content.field_text }}
  {% endif %}
</div>
