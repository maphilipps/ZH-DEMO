  # Core modules
  - drupal:node
  - drupal:user
  - drupal:system
  - drupal:field
  - drupal:file
  - drupal:image
  - drupal:media
  - drupal:text
  - drupal:link
  - drupal:taxonomy
  - drupal:menu_ui
  - drupal:menu_link_content
  - drupal:block
  - drupal:block_content
  - drupal:views
  - drupal:filter
  - drupal:editor
  - drupal:ckeditor5
  - drupal:path
  - drupal:path_alias
  - drupal:page_cache
  - drupal:dynamic_page_cache
  - drupal:big_pipe
  - drupal:dblog
  - drupal:update
  - drupal:help
  - drupal:search
  - drupal:language
  - drupal:locale
  - drupal:content_translation
  - drupal:responsive_image
  - drupal:breakpoint
  - drupal:datetime
  - drupal:datetime_range
  - drupal:telephone
  - drupal:options
  - drupal:inline_form_errors
  
  # Extended content management
  - paragraphs:paragraphs
  - paragraphs:paragraphs_ee
  - entity_reference_revisions:entity_reference_revisions
  - field_group:field_group
  - viewfield:viewfield
  - content_moderation:content_moderation
  - workflows:workflows
  - scheduler:scheduler
  - scheduler:scheduler_content_moderation_integration
  - pathauto:pathauto
  - redirect:redirect
  - redirect:redirect_404
  - metatag:metatag
