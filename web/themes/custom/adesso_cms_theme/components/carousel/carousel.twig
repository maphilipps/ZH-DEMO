<div id="carousel-{{ random() }}" 
     class="swiper {{ class|default('') }}" 
     data-carousel="slide"
     data-carousel-autoplay="{{ autoplay|default(true) ? 'true' : 'false' }}"
     data-carousel-interval="{{ interval|default(5000) }}"
     data-carousel-pause-on-hover="{{ pause_on_hover|default(true) ? 'true' : 'false' }}"
     role="region"
     aria-label="Image carousel with {{ items|default([])|length }} slides">
  
  {# Swiper wrapper #}
  <div class="swiper-wrapper">
    {% block carousel_items %}
      {% for item in items|default([]) %}
        <div class="swiper-slide">
          {% include 'adesso_cms_theme:carousel-item' with {
            item: item,
            is_active: loop.first,
            item_class: item_class|default('')
          } %}
        </div>
      {% endfor %}
    {% endblock %}
  </div>

  {# Custom styled Swiper navigation arrows #}
  {% if items|default([])|length > 1 %}
    <div class="swiper-button-prev absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" 
         aria-label="Previous slide">
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
        <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
        </svg>
        <span class="sr-only">Previous</span>
      </span>
    </div>
    <div class="swiper-button-next absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" 
         aria-label="Next slide">
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
        <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
        </svg>
        <span class="sr-only">Next</span>
      </span>
    </div>
  {% endif %}

  {# Custom styled Swiper pagination #}
  {% if items|default([])|length > 1 %}
    <div class="swiper-pagination absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse" 
         role="tablist" 
         aria-label="Slide indicators">
    </div>
  {% endif %}
</div>