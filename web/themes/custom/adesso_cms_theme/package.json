{
  "name": "adesso_cms_theme",
  "version": "1.2",
  "type": "module",
  "scripts": {
    "scss-fix": "npx stylelint './src/**/*.css' './components/**/*.scss' --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean:css": "rimraf dist/*.css components/**/*.css",
    "clean:js": "rimraf dist/*.js",
    "clean": "npm run clean:css && npm run clean:js",
    "lint:js": "eslint components/**/*.behavior.js --fix",
    "lint:sass": "stylelint 'src/**/*.css' 'components/**/*.scss'",
    "compile": "node compile.cjs",
    "build:stories": "node build-stories.cjs",
    "build": "npm run build:stories && vite build && npm run compile",
    "watch:tailwind": "npx tailwindcss -i ./src/css/adesso.css -o ./dist/css/adesso.css --watch",
    "watch:components": "chokidar 'components/**/*.scss' -c 'node compile.js {path}'",
    "watch:stories": "chokidar 'components/**/*.stories.js' -c 'node story-watcher.js {path}'",
    "watch": "npm-run-all --parallel watch:tailwind watch:components watch:stories",
    "cypress": "npx cypress run",
    "dev": "vite",
    "vite-build": "vite build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.4.0",
    "@storybook/addon-actions": "^8.1.4",
    "@storybook/addon-essentials": "^8.1.4",
    "@storybook/addon-interactions": "^8.4.6",
    "@storybook/addon-links": "^8.1.4",
    "@storybook/addon-mdx-gfm": "^8.4.6",
    "@storybook/addon-themes": "^8.1.4",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.3",
    "@storybook/blocks": "^8.1.4",
    "@storybook/html": "^8.4.6",
    "@storybook/html-webpack5": "^8.4.6",
    "@storybook/test": "^8.1.4",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "cypress": "^13.11.0",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.6.15",
    "glob": "^10.3.15",
    "glob-all": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^5.0.7",
    "sass": "^1.77.2",
    "storybook": "^8.1.4",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-scss": "^6.10.1",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.3"
  },
  "dependencies": {
    "@babel/preset-env": "^7.26.0",
    "@tailwindcss/typography": "^0.5.15",
    "buffer": "^6.0.3",
    "flowbite": "^3.0.0-beta.1",
    "jquery": "^3.7.1",
    "js-yaml": "^4.1.0",
    "postcss-scss": "^4.0.9",
    "twing": "^7.1.0-beta.2",
    "twing-loader": "^5.0.0-beta.3"
  }
}
