<div class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6 ">
    {% if pre_headline %}
      <p class="mb-2 text-lg font-medium text-center dark:text-white">
        {{ pre_headline }}
      </p>
    {% endif %}
    <h2 class="mb-6 lg:mb-8 text-3xl lg:text-4xl tracking-tight font-extrabold text-center text-gray-900 dark:text-white">{{ title }}</h2>
    <div class="mx-auto max-w-screen-md">
      <div id="accordion-flush" data-accordion="collapse" data-active-classes="bg-white dark:bg-gray-900 text-gray-900 dark:text-white" data-inactive-classes="text-gray-500 dark:text-gray-400">
        {% block accordion_items %}
          {% for item in accordion_items %}
            {% include '@adesso_cms_theme/accordion/accordion-item.twig' with {
              item: item,
              is_expanded: loop.first,
              accordion_instance: loop.index
            } only %}
          {% endfor %}
        {% endblock %}
      </div>
    </div>
  </div>
</div>
