#!/bin/bash

## Description: Import Drupal configuration from config/sync
## Usage: config-import
## Example: "ddev config-import"

set -eu -o pipefail

echo "ðŸ”„ Importing Drupal configuration..."

# Clear cache first
drush cache:rebuild

# Import configuration
drush config:import --yes

# Clear cache again after import
drush cache:rebuild

# Update database if needed
drush updatedb --yes

echo "âœ… Configuration import completed successfully!"
echo "ðŸ’¡ Site should now reflect imported configuration changes."