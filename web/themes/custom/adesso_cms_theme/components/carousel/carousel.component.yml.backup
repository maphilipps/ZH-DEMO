$schema: https://git.drupalcode.org/project/drupal/-/raw/10.1.x/core/modules/sdc/src/metadata.schema.json
name: First Slide
description: First Slide component
props:
  type: object
  properties:
    items:
      type: object
      title: items
      description: Define the array of carousel items
      properties:
        url:
          type: string
        title:
          type: string
        icon:
          type: string
    cards_per_view:
      type: string
      title: cards_per_view
      description: ''
    autoplay:
      type: boolean
      title: autoplay
      description: Enable autoplay
    interval:
      type: string
      title: interval
      description: ''
    pause_on_hover:
      type: boolean
      title: pause_on_hover
      description: Pause autoplay on hover
    section_title:
      type: string
      title: section_title
      description: Section title (for cards layout)
    section_subtitle:
      type: string
      title: section_subtitle
      description: Section subtitle (for cards layout)
    heading:
      type: object
      title: heading
      description: Main heading configuration using adesso heading component
      properties:
        url:
          type: string
        title:
          type: string
        icon:
          type: string
    pre_headline:
      type: string
      title: pre_headline
      description: Pre-headline text displayed above main heading
    class:
      type: string
      title: class
      description: Additional CSS classes for the carousel container
    item_class:
      type: string
      title: item_class
      description: Additional CSS classes for each carousel item
libraryOverrides:
  js:
    carousel.behavior.js:
      attributes:
        async: false
        defer: true
  dependencies:
    - core/drupal
