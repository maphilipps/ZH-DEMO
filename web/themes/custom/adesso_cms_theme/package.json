{
  "name": "adesso_cms_theme",
  "version": "1.2",
  "type": "module",
  "scripts": {
    "scss-fix": "npx stylelint './src/**/*.css' './components/**/*.scss' --fix",
    "storybook": "storybook dev -p 6006 --host 0.0.0.0 --no-open",
    "storybook:test": "storybook dev --test-runner",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:stories": "vitest run",
    "test:ui": "vitest --ui",
    "test:browser": "vitest --config vitest.config.js",
    "test:watch": "vitest --watch",
    "test:watch:components": "chokidar 'components/**/*.{stories.js,twig,scss,behavior.js,component.yml}' --debounce 500 -c 'npm run test:stories'",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "echo 'Accessibility tests would run here'",
    "test:storybook:a11y": "echo 'Storybook accessibility tests would run here'",
    "analyze:bundle": "echo 'Bundle analysis would run here'",
    "qa:validate": "npm run test:stories && echo 'Vitest QA validation completed'",
    "clean:css": "rimraf dist/*.css components/**/*.css",
    "clean:js": "rimraf dist/*.js",
    "clean": "npm run clean:css && npm run clean:js",
    "lint:js": "eslint components/**/*.behavior.js --fix",
    "lint:sass": "stylelint 'src/**/*.css' 'components/**/*.scss'",
    "compile": "node compile.cjs",
    "build:stories": "node build-stories.cjs",
    "build": "npm run build:stories && vite build && npm run compile",
    "watch:tailwind": "npx tailwindcss -i ./src/css/adesso.css -o ./dist/css/adesso.css --watch",
    "watch:components": "chokidar 'components/**/*.scss' -c 'node compile.js {path}'",
    "watch:stories": "chokidar 'components/**/*.stories.js' -c 'node story-watcher.js {path}'",
    "watch": "npm-run-all --parallel watch:tailwind watch:components watch:stories",
    "watch:with-tests": "npm-run-all --parallel watch:tailwind watch:components watch:stories test:watch:components",
    "dev": "vite",
    "vite-build": "vite build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@storybook/addon-a11y": "^8.6.3",
    "@storybook/addon-actions": "^8.1.4",
    "@storybook/addon-essentials": "^8.6.3",
    "@storybook/addon-interactions": "^8.6.3",
    "@storybook/addon-links": "^8.6.3",
    "@storybook/addon-mdx-gfm": "^8.6.3",
    "@storybook/addon-themes": "^8.6.3",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.5",
    "@storybook/blocks": "^8.1.4",
    "@storybook/experimental-addon-test": "^8.6.14",
    "@storybook/html": "^8.4.6",
    "@storybook/html-webpack5": "^8.6.3",
    "@storybook/test": "^8.1.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.0.9",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.9",
    "@vitest/browser": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-storybook": "^0.6.15",
    "glob": "^10.4.5",
    "glob-all": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.54.1",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^5.0.10",
    "sass": "^1.85.1",
    "storybook": "^8.6.3",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-scss": "^6.12.1",
    "tailwindcss": "^4.0.0-beta.8",
    "vite": "^6.2.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@babel/preset-env": "^7.26.9",
    "@tailwindcss/typography": "^0.5.16",
    "buffer": "^6.0.3",
    "flowbite": "^3.1.2",
    "jquery": "^3.7.1",
    "js-yaml": "^4.1.0",
    "postcss-scss": "^4.0.9",
    "swiper": "^11.2.10",
    "twing": "^7.2.1",
    "twing-loader": "^5.0.0-beta.3"
  }
}
