{#
/**
 * @file
 * Clean search results template - override all theme suggestions
 */
#}
{% set hide_debug = true %}
{# Completely clean rendering without any theme debug output #}
<article class="search-result-card bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 p-6 mb-4">
  
  {# Content type badge #}
  {% if fields.type is defined and fields.type.content %}
    <div class="mb-3">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
        {{ fields.type.content|striptags|trim }}
      </span>
    </div>
  {% endif %}

  {# Title with link #}
  {% if fields.title is defined and fields.title.content %}
    <h3 class="text-xl font-semibold text-gray-900 mb-3">
      {{ fields.title.content|striptags }}
    </h3>
  {% endif %}

  {# Excerpt #}
  {% if fields.search_api_excerpt is defined and fields.search_api_excerpt.content %}
    <div class="text-gray-700 mb-4">
      {{ fields.search_api_excerpt.content|striptags }}
    </div>
  {% endif %}

  {# Categories #}
  {% if fields.field_directory_category is defined and fields.field_directory_category.content %}
    <div class="flex flex-wrap gap-2 mb-3">
      {{ fields.field_directory_category.content|striptags }}
    </div>
  {% endif %}

  {# Municipal verification #}
  <div class="text-sm text-gray-500">
    <span class="inline-flex items-center">
      <svg class="w-4 h-4 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      Verified by Gemeinde Bruchtal
    </span>
  </div>

</article>