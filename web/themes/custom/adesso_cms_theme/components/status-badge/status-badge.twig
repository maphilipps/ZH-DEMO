{#
/**
 * @file
 * Status Badge component template for Infrastructure Damage Report workflow.
 *
 * @param {string} status - Current workflow status (required) - neu|in_bearbeitung|erledigt|abgelehnt
 * @param {string} size - Size variant (sm|md|lg)
 * @param {string} modifier - Additional CSS classes
 */
#}
{% set badge_status = status|default('neu') %}
{% set badge_size = size|default('md') %}
{% set badge_modifier = modifier|default('') %}

{# Status-specific classes with Swiss municipal color scheme #}
{% set status_config = {
  'neu': {
    'classes': 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300 border border-blue-200',
    'label': 'Neu',
    'icon': '<svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>'
  },
  'in_bearbeitung': {
    'classes': 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300 border border-orange-200',
    'label': 'In Bearbeitung',
    'icon': '<svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>'
  },
  'erledigt': {
    'classes': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 border border-green-200',
    'label': 'Erledigt',
    'icon': '<svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>'
  },
  'abgelehnt': {
    'classes': 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300 border border-red-200',
    'label': 'Abgelehnt',
    'icon': '<svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>'
  }
} %}

{# Size-specific classes #}
{% set size_classes = {
  'sm': 'text-xs px-2 py-0.5',
  'md': 'text-sm px-2.5 py-1',
  'lg': 'text-base px-3 py-1.5'
} %}

{% set current_status = status_config[badge_status]|default(status_config.neu) %}

{# Build complete class string #}
{% set badge_classes = [
  'inline-flex items-center font-medium rounded-md',
  current_status.classes,
  size_classes[badge_size]|default(size_classes.md),
  badge_modifier
]|join(' ')|trim %}

<span class="{{ badge_classes }}" role="status" aria-label="Status: {{ current_status.label }}">
  {% if badge_size != 'sm' %}
    {{ current_status.icon|raw }}
  {% endif %}
  {{ current_status.label }}
</span>