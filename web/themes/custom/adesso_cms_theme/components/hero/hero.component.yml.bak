$schema: https://git.drupalcode.org/project/drupal/-/raw/10.1.x/core/modules/sdc/src/metadata.schema.json
name: Hero
description: Editorial/Hero component
props:
  type: object
  properties:
    modifier:
      type: string
      title: modifier
      description: Additional CSS classes for the hero wrapper
    media:
      type: string
      title: media
      description: Media content (image or video HTML)
    heading:
      type: string
      title: heading
      description: Main hero heading
    text:
      type: string
      title: text
      description: Hero description text
    pre_headline:
      type: string
      title: pre_headline
      description: Pre-headline text above the main heading
    hero_layout:
      type: string
      title: hero_layout
      description: Select the layout variant for the Hero component.
      enum:
        - image_top
        - image_bottom
        - image_bottom_split
        - video_background
    link:
      type: object
      title: link
      description: Primary action link
      properties:
        url:
          type: string
        title:
          type: string
        icon:
          type: string
    link2:
      type: object
      title: link2
      description: Secondary action link
      properties:
        url:
          type: string
        title:
          type: string
        icon:
          type: string
