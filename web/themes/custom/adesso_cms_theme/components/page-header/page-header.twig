<div class="page-header-wrapper {{ modifier|default('') }} relative isolate overflow-hidden {{ background_image ? 'bg-gray-900' : 'bg-primary' }} py-24 sm:py-32">
  {% if background_image %}
    <img src="{{ background_image }}" 
         alt="{{ alt_text|default('') }}" 
         class="absolute inset-0 -z-10 size-full object-cover" />
    {# Improved backdrop: black to transparent gradient from bottom to top for better text readability #}
    <div class="absolute inset-0 -z-5 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
  {% endif %}
  
  <div aria-hidden="true" class="hidden sm:absolute sm:-top-10 sm:right-1/2 sm:-z-10 sm:mr-10 sm:block sm:transform-gpu sm:blur-3xl">
    <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" 
         class="aspect-1097/845 w-274.25 bg-linear-to-tr from-[#ff4694] to-[#776fff] opacity-20"></div>
  </div>
  
  <div aria-hidden="true" class="absolute -top-52 left-1/2 -z-10 -translate-x-1/2 transform-gpu blur-3xl sm:-top-112 sm:ml-16 sm:translate-x-0 sm:transform-gpu">
    <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" 
         class="aspect-1097/845 w-274.25 bg-linear-to-tr from-[#ff4694] to-[#776fff] opacity-20"></div>
  </div>
  
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl lg:mx-0">
      {% if title|default('') %}
        <h1 class="text-5xl font-semibold tracking-tight text-white sm:text-7xl">
          {{ title }}
        </h1>
      {% endif %}
      
      {% if description|default('') %}
        <p class="mt-8 text-lg font-medium text-pretty text-white sm:text-xl/8">
          {{ description }}
        </p>
      {% endif %}
    </div>
  </div>
</div>