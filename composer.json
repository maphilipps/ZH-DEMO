{
    "name": "adesso/cms",
    "description": "Drupal with a bunch of useful stuff.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://drupal.org/docs/user_guide/en/index.html",
        "chat": "https://drupal.org/node/314178"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "starter": {
            "type": "path",
            "url": "recipes/adesso_cms_starter"
        },
        "paragraphs": {
            "type": "path",
            "url": "recipes/adesso_cms_paragraphs"
        },
        "blog": {
            "type": "path",
            "url": "recipes/adesso_cms_blog"
        },
        "ai": {
            "type": "path",
            "url": "recipes/adesso_cms_ai"
        },
        "adesso_standard": {
            "type": "path",
            "url": "web/themes/custom/adesso_standard"
        }
    },
    "require": {
        "adesso/adesso_cms_ai": "*",
        "adesso/adesso_cms_blog": "*",
        "adesso/adesso_cms_starter": "*",
        "adesso/adesso_standard": "*",
        "composer/installers": "^2.3",
        "cweagans/composer-patches": "^1.7",
        "drupal/all_entity_preview": "^1.0@alpha",
        "drupal/core-composer-scaffold": "^11.1",
        "drupal/core-project-message": "^11.1",
        "drupal/core-recommended": "^11.1",
        "drupal/drupal_cms_accessibility_tools": "*",
        "drupal/drupal_cms_analytics": "*",
        "drupal/drupal_cms_case_study": "*",
        "drupal/drupal_cms_events": "*",
        "drupal/drupal_cms_forms": "*",
        "drupal/drupal_cms_news": "*",
        "drupal/drupal_cms_person": "*",
        "drupal/drupal_cms_project": "*",
        "drupal/drupal_cms_search": "^1.0@RC",
        "drupal/drupal_cms_seo_tools": "^1.0@RC",
        "drush/drush": "^13"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/development.services.yml": {
                    "mode": "replace",
                    "path": "assets/development.services.yml"
                },
                "[web-root]/sites/default/settings.php": {
                    "mode": "append",
                    "path": "assets/settings-append-local.txt"
                },
                "[web-root]/sites/settings.local.php": "assets/settings.local.php"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "recipes/{$name}": ["type:drupal-recipe"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/default_content": {
                "Drush comand to export all items from entity with defined criteria": "https://www.drupal.org/files/issues/2023-10-06/2786479-46.patch"
            },
            "drupal/frontend_editing": {
                "Schema errors for frontend_editing.settings with the following errors": "https://git.drupalcode.org/project/frontend_editing/-/merge_requests/96.diff"
            }
        },
        "drupal-core-project-message": {
            "include-keys": ["homepage", "support"],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                   </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed Drupal CMS!    </>",
                "<bg=blue;fg=white>                                                   </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Run <fg=yellow>./launch-drupal-cms.sh</> to initialize Drupal CMS and open it in a browser.",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://drupal.org/support",
                "  * Get involved with the Drupal community: https://drupal.org/getting-involved"
            ]
        }
    },
    "require-dev": {
        "drupal/core-dev": "^11.1",
        "drupal/devel": "^5.3"
    }
}
