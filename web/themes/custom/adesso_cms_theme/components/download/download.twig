{#
/**
 * @file
 * Download component.
 *
 * @param {string} pre_headline - Pre-headline text
 * @param {string} headline - Main headline
 * @param {array} items - Array of download items
 * @param {string} theme - Theme variant (light/dark)
 */
#}
{% set is_dark = theme == 'dark' %}
{% set border_class = is_dark ? 'divide-gray-700' : 'divide-gray-200' %}

<div>
  <div>
    {% if pre_headline %}
      <h3 class="mb-4 text-2xl font-bold tracking-tight leading-none text-gray-900">
        {{ pre_headline }}
      </h3>
    {% endif %}

    {% if headline %}
      <h2 class="text-3xl font-bold text-gray-900">{{ headline }}</h2>
    {% endif %}

    <div class="mt-8">
      <ul class="divide-y {{ border_class }}">
        {% block download_items %}
          {% for item in items %}
            {{ item }}
          {% endfor %}
        {% endblock download_items %}
      </ul>
    </div>
  </div>
</div>