{%
  set classes = []
%}
{% set is_dark = paragraph.field_content_element_theme.value %}

<div class="w-full {{ is_dark ? 'bg-gray-100' : 'bg-white' }}">
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{{ title_suffix }}
	{% block content %}
        {{ content.frontend_editing }}
		{% include 'adesso_cms_theme:hero' with {
      hero_layout: paragraph.field_hero_layout.value,
      media: content.field_media,
      is_dark: is_dark ? true : false,
      pre_headline: paragraph.field_pre_headline.value,
      heading: paragraph.field_heading.value|render|striptags,
      text: content.field_summary,
      link: content.field_link[0]['#url'] ? {
        url: content.field_link[0]['#url']|render|striptags,
        title: content.field_link[0]['#title']|render|striptags,
      } : {},
      link2: content.field_link2[0]['#url'] ? {
        url: content.field_link2[0]['#url']|render|striptags,
        title: content.field_link2[0]['#title']|render|striptags,
      } : {},
    } only %}
	{% endblock %}
</div>
</div>
