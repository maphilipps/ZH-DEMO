{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 * - copyright: Copyright information. field_copyright if exists, as fallaback the media name.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div class="stage-image-container w-full lg:w-[640px]">
    {% set attributes = attributes.addClass('w-full', 'h-full') %}

      {{ include('@components/picture-with-copyright.html.twig', {
        'picture': content.field_media_image,
        'caption': copyright,
        'attributes': attributes,
        'alignment': 'left'
      }) }}

  </div>
{% endif %}


